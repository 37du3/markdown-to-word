{
  "name": "markdown-to-word",
  "private": true,
  "version": "1.0.8",
  "description": "一个纯前端的 Markdown 转 Word 格式转换工具，支持表格、代码块等复杂格式的完美转换",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:ext": "BUILD_TARGET=extension vite",
    "build": "vite build",
    "build:ext": "BUILD_TARGET=extension vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "package:ext": "npm run build:ext && zip -r extension.zip dist-extension"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "docx": "^8.5.0",
    "file-saver": "^2.0.5",
    "highlight.js": "^11.9.0",
    "katex": "^0.16.27",
    "lucide-react": "^0.344.0",
    "marked": "^12.0.2",
    "marked-gfm-heading-id": "^3.1.0",
    "marked-highlight": "^2.1.1",
    "marked-katex-extension": "^5.1.6",
    "mermaid": "^11.12.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/chrome": "^0.1.36",
    "@types/file-saver": "^2.0.7",
    "@types/highlight.js": "^10.1.0",
    "@types/jsdom": "^27.0.0",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-vitest": "^0.5.4",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.1",
    "terser": "^5.46.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vitest": "^1.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/37du3/markdown-to-word.git"
  },
  "keywords": [
    "markdown",
    "word",
    "converter",
    "llm",
    "chatgpt",
    "claude",
    "chrome-extension",
    "open-source"
  ],
  "author": "Your Name",
  "license": "MIT"
}